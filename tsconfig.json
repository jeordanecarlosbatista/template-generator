{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDirs": ["src", "__test__"],                               
    "declaration": true,                             
    "sourceMap": true,                             
    "outDir": "dist",                                  
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                      
    "skipLibCheck": true                                
  }
}
