{
  "name": "ports-and-adapters-api-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:database && cross-env NODE_ENV=production node ./ports/adapters/express",
    "dev:container": "npm run start:database && cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/ports/adapters/express",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/ports/adapters/express",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "start:database": "prisma generate --schema=./ports/orm/prisma/schema.prisma && prisma migrate deploy --schema=./ports/orm/prisma/schema.prisma",
    "build": "rimraf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "db:deploy": "prisma migrate deploy"
  },
  "prisma": {
    "schema": "./src/infra/db/postgres/prisma/schema.prisma"
  },
  "author": "Jeordane Carlos Batista",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
