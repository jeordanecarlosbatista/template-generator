{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                          
    "allowJs": true,                    
    "outDir": "./dist",                              
    "rootDir": "./",                            
    "removeComments": true,                     
    "strict": true,                                 
    "baseUrl": "./",                           
    "paths": {
      "@core/*": ["src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@main/*": ["./src/main/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@validation/*": ["./src/validation/*"],
      "@test/*": ["./__tests__/*"]
    },                                 
    "typeRoots": [
      "./node_modules/@types",
			"./src/@types"
    ],                            
    "esModuleInterop": true,                       
    "resolveJsonModule": true,
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true,           
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true       
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}
